		<style>
      body {
  margin: 0;
  background-color: hsl(0, 0%, 98%);
  color: #333;
}
main {
  margin: 0 auto;
  padding: 4rem 0;
  width: 90%;
  max-width: 60rem;
}
h2{
  margin-left: 10px;
  margin-top: 2px;
  color: rgb(46, 48, 120);
}

.login-1{
  box-sizing: border-box;
  padding: 2rem;
  border-radius: 1rem;
  background-color: hsl(0, 0%, 100%);
  border: 4px solid rgb(46, 48, 120);
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
}

.full-width {
  display: flex;
  gap: 10px;
  grid-column: span 2;
  padding: 1rem;
}

input[type="text"],
input[type="email"]
{
  font: 1rem  sans-serif;
  display: block;
  box-sizing: border-box;
  border-radius: 10px;
  width: 100%;
  padding: 0.2rem 0.75rem;
}

button {
  font: 1.2rem sans-serif;
  border-radius: 0.25rem;
  cursor: pointer;
  padding: 0.3rem 1.95rem;
  border: none;
  border-radius: 10px;
  background-color:rgb(46, 48, 120);
  color: #fff;
}
button[type="submit"] {
  background-color: rgb(46, 48, 120);
  color: white;
}
button[type="submit"]:hover {
  background-color: rgb(106, 109, 206);
}
input:focus {
  outline-color:rgb(46, 48, 120) ;
  box-shadow: 0 0 0 4px hsl(213, 90%, 70%);
}
button:focus {
  outline: none;
  box-shadow: 0 0 0 4px black;
}
.custom-select {
  font: 1rem sans-serif;
  display: block;
  box-sizing: border-box;
  border-radius: 10px;
  width: 100%;
  padding: 0.2rem 0.75rem;
  background-color: white;
  border: 2px solid rgb(46, 48, 120);
  color: #333;
  cursor: pointer;
  appearance: none; /* Bazı tarayıcılarda varsayılan oku kaldırır */
  background-image: url("path_to_custom_arrow_icon.png");
  background-repeat: no-repeat;
  background-position: right center;
}

.custom-select:focus {
  outline-color: rgb(46, 48, 120);
  box-shadow: 0 0 0 4px hsl(213, 90%, 70%);
}

.custom-select::-ms-expand {
  display: none;
}
